{
  "name": "n-color",
  "version": "1.0.0",
  "description": "A modern, fully fledged color toolkit",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only server.ts",
    "build": "tsc -p tsconfig.prod.json",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest --config ./jest.config.ts",
    "test:watch": "jest --config ./jest.config.ts --watch",
    "docs:build": "documentation build dist/index.js -f html -o build/api",
    "docs:serve": "docsify serve ./site",
    "docs:site": "mkdir -p build && rsync -a site/ build",
    "docs": "pnpm run docs:build && pnpm run docs:site",
    "docs:watch": "typedoc --watch"
  },
  "keywords": [
    "color",
    "colour",
    "css",
    "typescript"
  ],
  "author": "Bobby Plunkett",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "documentation": "^13.2.5",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}
